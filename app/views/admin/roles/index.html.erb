<h2 class="title">Listing roles</h2>

<table class="grid">
  <tr>
    <th>Role</th>
    <th></th>
  </tr>

<% @roles.each do |role| %>
  <tr class="<%= cycle :odd, :even %>">
    <td><%= role.name %></td>
    <td>
      <%= link_to 'Edit', edit_admin_role_path(role) %> |
      <%= link_to 'Destroy', admin_role_path(role), :confirm => 'Are you sure?', :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Role', new_admin_role_path, :class => "button biground green" %>
