<h2 class="title">Listing products</h2>

<table class="grid">
  <tr>
    <th>Product Name</th>
    <th>Printable</th>
    <th>Embroiderable</th>
    <th>Slug</th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.printable ? image_tag('tick.png') : "" %></td>
    <td><%= product.embroiderable ? image_tag('tick.png') : "" %></td>
    <td><%= product.slug %></td>
    <td><%= link_to 'Edit', edit_admin_product_path(product) %> |
    <%= link_to 'Destroy', admin_product_path(product), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_admin_product_path, :class => "button biground green" %>
