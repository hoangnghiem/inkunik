<h2 class="title">Listing categories</h2>
<table class="grid">
  <tr>
    <th>Name</th>
    <th>Slug</th>
    <th>Path</th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.slug %></td>
    <td><%= category.path %></td>
    <td><%= link_to 'Edit', edit_admin_category_path(category) %> |
    <%= link_to 'Destroy', admin_category_path(category), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_admin_category_path, :class => "button biground green" %>
